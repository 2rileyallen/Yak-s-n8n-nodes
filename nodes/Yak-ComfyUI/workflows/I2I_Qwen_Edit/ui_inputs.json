{
  "properties": [
    {
      "displayName": "--- Input Settings ---",
      "name": "inputSettingsNotice",
      "type": "notice",
      "default": ""
    },
    {
      "displayName": "Use File Path for Input Image",
      "name": "inputImageUseFilePath",
      "type": "boolean",
      "default": true,
      "description": "Use a file path for the input image. Uncheck to use binary data from a previous node."
    },
    {
      "displayName": "File Path",
      "name": "inputImageFilePath",
      "type": "string",
      "default": "",
      "displayOptions": {
        "show": {
          "inputImageUseFilePath": [
            true
          ]
        }
      },
      "placeholder": "/path/to/your/image.png",
      "description": "The full file path to the source image to be edited.",
      "required": true,
      "mapsTo": "inputImage"
    },
    {
      "displayName": "Binary Property Name",
      "name": "inputImageBinaryPropertyName",
      "type": "string",
      "default": "data",
      "displayOptions": {
        "show": {
          "inputImageUseFilePath": [
            false
          ]
        }
      },
      "description": "The name of the binary property from a previous node containing the input image.",
      "mapsTo": "inputImage"
    },
    {
      "displayName": "Prompt",
      "name": "prompt",
      "type": "string",
      "typeOptions": {
        "rows": 4
      },
      "default": "make him wear a tank top",
      "description": "The instructions for how to edit the image.",
      "required": true,
      "mapsTo": "prompt"
    },
    {
      "displayName": "Batch Size",
      "name": "batchSize",
      "type": "number",
      "default": 1,
      "description": "The number of images to generate.",
      "mapsTo": "batchSize"
    },
    {
      "displayName": "--- Output Settings ---",
      "name": "outputSettingsNotice",
      "type": "notice",
      "default": ""
    },
    {
      "displayName": "Output as File Path",
      "name": "outputAsFilePath",
      "type": "boolean",
      "default": true,
      "description": "Whether to save the output to a specified file path. Uncheck to output as binary data."
    },
    {
      "displayName": "Output File Path",
      "name": "outputFilePath",
      "type": "string",
      "default": "",
      "displayOptions": {
        "show": {
          "outputAsFilePath": [
            true
          ]
        }
      },
      "required": true,
      "mapsTo": "outputFilePath"
    },
    {
      "displayName": "Output Binary Property Name",
      "name": "outputBinaryPropertyName",
      "type": "string",
      "default": "data",
      "displayOptions": {
        "show": {
          "outputAsFilePath": [
            false
          ]
        }
      },
      "mapsTo": "outputBinaryPropertyName"
    }
  ],
  "mappings": {
    "inputImage": {
      "nodeId": "117:116",
      "path": "inputs.image",
      "is_media_input": true
    },
    "prompt": {
      "nodeId": "117:76",
      "path": "inputs.prompt"
    },
    "batchSize": {
      "nodeId": "117:114",
      "path": "inputs.batch_size"
    }
  }
}
